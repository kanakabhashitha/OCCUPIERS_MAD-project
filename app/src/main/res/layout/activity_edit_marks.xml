<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMarks"
    >

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <include
            layout="@layout/backwerdmanu"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/back_cover_03"
            >


            <EditText
                android:id="@+id/assignmentNoo"
                android:drawablePadding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="16sp"



                android:layout_margin="10dp"
                android:hint="Assignment Number"
                />



            <EditText
                android:id="@+id/studentIDo"
                android:drawablePadding="10dp"

                android:layout_margin="10dp"
                android:hint="Student ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/Fnameo"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/subjecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawablePadding="10dp"
                android:hint="Subject"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/markso"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"
                android:hint="Marks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/commento"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"
                android:hint="Comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/submito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Save"
                android:textColor="#ffffff"
                app:backgroundTint="#144FE4" />

            <Button
                android:id="@+id/cancelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="#ffffff"
                app:backgroundTint="#EF1818" />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>