<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#EFEBEB"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"

        android:layout_height="75dp"
        android:background="@android:color/holo_purple"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:padding="12dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="92dp"
            android:contentDescription="@string/arrowback"
            android:foregroundTint="#0C090C"
            android:onClick="clickMenu"
            android:src="@drawable/menuicon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/panthikamare"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:contentDescription="@string/menuicon"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/cardview_light_background"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="@string/report"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/cardview_shadow_end_color"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="@string/addmarks"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="86dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="16dp"

        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <ImageView
            android:layout_width="77dp"
            android:layout_height="73dp"
            android:layout_marginLeft="0dp"
            android:contentDescription="@string/addmarks"
            android:src="@drawable/add" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="374dp"
        android:layout_height="115dp"

        android:layout_marginBottom="204dp"

        android:background="@drawable/outline"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="95dp"

            android:orientation="horizontal"
            android:padding="10dp"
            tools:layout_editor_absoluteX="282dp"
            tools:layout_editor_absoluteY="97dp">


            <ImageView
                android:layout_width="79dp"
                android:layout_height="73dp"
                android:contentDescription="@string/marksicon"
                android:src="@drawable/marks" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="@string/it19956268"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="@string/maduka"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text="@string/mad"
                    android:textSize="15dp" />


            </LinearLayout>


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/dot" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

