<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_cover_01"
    tools:context=".add_assingment_student">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    tools:context=".add_assingment_student">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <include
            layout="@layout/backwerdmanu"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="3dp"
            >


        </LinearLayout>

    </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/Description_text"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/background1"
                    android:hint="Enter description"
                    android:id="@+id/assignemtDescription"
                    android:inputType="textMultiLine"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/upload_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:id="@+id/answerImage"
                    android:layout_gravity="center"
                    android:src="@drawable/upload_assingment_btnicon"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>