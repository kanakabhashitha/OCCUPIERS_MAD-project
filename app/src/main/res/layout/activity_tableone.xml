<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tableone">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"

        android:layout_height="75dp"
        android:background="@android:color/holo_purple"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:padding="12dp">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="92dp"
            android:contentDescription="@string/arrowback"
            android:foregroundTint="#0C090C"
            android:onClick="clickMenu"
            android:src="@drawable/menuicon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/panthikamare"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:contentDescription="@string/menuicon"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:background="#D1D0CE"

            android:gravity="center"
            android:text="@string/report"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFF"

            android:gravity="center"
            android:text="@string/addmarks"
            android:textColor="@android:color/holo_purple"
            android:textSize="30dp"/>

    </LinearLayout>




   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_marginTop="140dp"
       android:orientation="vertical"
       android:padding="20dp">


       <TextView
           android:id="@+id/textView9"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="start"
           android:text="@string/assignmentno"
           android:textColor="@android:color/holo_purple"
           android:textSize="15dp"
           android:textStyle="bold" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="5dp">

       </Space>

       <EditText
           android:id="@+id/editTextTextPersonName3"
           android:layout_width="350dp"
           android:layout_height="25dp"
           android:background="@drawable/blackoutline"

           android:ems="10"
           android:gravity="start"
           android:hint="@string/asignmentnumber"
           android:inputType="textPersonName"

           android:textColor="#808080"
           android:textSize="15dp" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="10dp">

       </Space>

       <TextView
           android:id="@+id/textView10"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/studentid"
           android:textColor="@android:color/holo_purple"
           android:textSize="15dp"
           android:textStyle="bold" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="5dp">

       </Space>

       <EditText
           android:id="@+id/editTextTextPersonName4"
           android:layout_width="350dp"
           android:layout_height="25dp"
           android:background="@drawable/blackoutline"
           android:ems="10"
           android:hint="@string/studentidinput"
           android:inputType="textPersonName"

           android:padding="2dp"
           android:textSize="15dp" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="10dp">

       </Space>

       <TextView
           android:id="@+id/textView11"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/firstname"
           android:textColor="@android:color/holo_purple"
           android:textSize="15dp"
           android:textStyle="bold" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="5dp">

       </Space>

       <EditText
           android:id="@+id/editTextTextPersonName5"

           android:layout_width="350dp"
           android:layout_height="25dp"
           android:background="@drawable/blackoutline"
           android:ems="10"

           android:hint="@string/firstnameiinput"
           android:inputType="textPersonName"
           android:padding="2dp"
           android:textSize="15dp" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="10dp">

       </Space>

       <TextView
           android:id="@+id/textView12"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/lastname"
           android:textColor="@android:color/holo_purple"
           android:textSize="15dp"
           android:textStyle="bold" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="5dp">

       </Space>

       <EditText
           android:id="@+id/editTextTextPersonName6"
           android:layout_width="350dp"
           android:layout_height="25dp"
           android:background="@drawable/blackoutline"
           android:ems="10"
           android:gravity="start"
           android:hint="@string/lastnameinput"
           android:inputType="textPersonName"
           android:padding="2dp"
           android:textSize="15dp" />
       <Space
           android:layout_width="match_parent"
           android:layout_height="10dp">

       </Space>

       <TextView
           android:id="@+id/textView13"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/marks"
           android:textColor="@android:color/holo_purple"
           android:textSize="15dp"
           android:textStyle="bold" />
       <Space
           android:layout_width="match_parent"
           android:layout_height="5dp">

       </Space>

       <EditText
           android:id="@+id/editTextTextPersonName7"

           android:layout_width="350dp"
           android:layout_height="25dp"
           android:background="@drawable/blackoutline"
           android:ems="10"

           android:gravity="start"
           android:hint="@string/marksinput"
           android:inputType="textPersonName"
           android:padding="2dp"
           android:textSize="15dp" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="10dp">

       </Space>

       <TextView
           android:id="@+id/textView14"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/comment"
           android:textColor="@android:color/holo_purple"
           android:textSize="15dp"
           android:textStyle="bold" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="5dp">

       </Space>

       <EditText
           android:id="@+id/editTextTextPersonName8"

           android:layout_width="350dp"
           android:layout_height="40dp"
           android:background="@drawable/blackoutline"
           android:ems="10"
           android:gravity="center"
           android:hint="@string/commentinput"
           android:inputType="textPersonName"
           android:padding="2dp" />

       <Space
           android:layout_width="match_parent"
           android:layout_height="10dp">

       </Space>

       <Button
           android:id="@+id/button"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/savebtn" />


   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>